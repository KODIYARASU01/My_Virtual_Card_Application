<IfModule mod_rewrite.c>
  RewriteEngine On

  # Redirect all HTTP requests to HTTPS (optional)
  RewriteCond %{HTTPS} off
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

  # Handle API requests by proxying to the backend server
  RewriteCond %{REQUEST_URI} ^/api
  RewriteRule ^(.*)$ http://localhost:3001/$1 [P,L]

  # Ensure the following lines are below the API proxy configuration
  # If the request is for a real file or directory, serve it directly
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Otherwise, all other requests go to index.html
  RewriteRule ^ index.html [L]
</IfModule>

<IfModule mod_proxy.c>
  ProxyRequests Off
  ProxyPass /api http://localhost:3001/api
  ProxyPassReverse /api http://localhost:3001/api
</IfModule>
